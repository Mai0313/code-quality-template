{
    "markdown.updateLinksOnFileMove.enabled": "always",
    "markdown.copyFiles.destination": {
        "/docs/**/*": "images/${documentBaseName}/",
        // "/tasks/**/*": "images/${documentBaseName}/",
        "/tasks/**/*": "images/",
        "/schedule/**/*": "images/",
        "/notes/**/*": "images/",
        "/**/*": "images/",
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "[markdown]": {
        "editor.formatOnSave": true
    },
    "todo-tree.highlights.customHighlight": {
        "WARN": {
            "foreground": "#ffffff",
            "background": "#ff0000",
            "iconColour": "#ff0000",
            "icon": "alert",
            "type": "text"
        },
        "[ ]": {
            "background": "#f5c018",
            "foreground": "#000000",
            "iconColour": "#f5c018",
            "icon": "check",
            "type": "tag"
        },
        "[x]": {
            "background": "#f8f0d7",
            "foreground": "#000000",
            "iconColour": "#1f7af1",
            "icon": "check",
            "type": "none"
        },
        "TODO": {
            "background": "#f5c018",
            "foreground": "#000000",
            "iconColour": "#f5c018",
            "icon": "check",
            "type": "tag"
        },
        "FIXME": {
            "background": "#d9444a",
            "foreground": "#000000",
            "iconColour": "#d9444a",
            "type": "text-and-comment"
        },
        "REVIEW": {
            "foreground": "#000000",
            "background": "#00ffff",
            "iconColour": "#add8e6",
            "icon": "eye",
            "gutterIcon": true
        },
        "HACK": {
            "foreground": "#000000",
            "background": "#FFA500",
            "iconColour": "#FFA500",
            "icon": "alert"
        },
        "REF": {
            "foreground": "#000000",
            "background": "#808080",
            "iconColour": "#808080",
            "icon": "link",
            "type": "tag"
        },
    },
    "todo-tree.highlights.defaultHighlight": {
        "type": "text-and-comment"
    },
    "prettier.tabWidth": 2,
    "todo-tree.general.statusBar": "total",
    "todo-tree.general.tags": [
        "BUG",
        "HACK",
        "FIXME",
        "TODO",
        "XXX",
        "[ ]",
        "[x]",
        "REVIEW",
        "‚ù§"
    ],
    "todo-tree.tree.showCountsInTree": true,
    "excalidraw.workspaceLibraryPath": "excalidraw/",
    "editor.fontSize": 16,
    "debug.console.fontSize": 16,
    "terminal.integrated.fontSize": 16,
    "chat.editor.fontSize": 16,
    "markdown.preview.fontSize": 18,
    "todo-tree.highlights.highlightDelay": 5,
}
